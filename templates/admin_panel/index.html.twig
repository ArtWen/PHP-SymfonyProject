{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.admin_label'|trans }}{% endblock %}

{% block main %}
    <h1>{{ 'project.project_list'|trans }}</h1>
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col" class="text-center">{{ 'project.title'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-calendar" aria-hidden="true"></i>{{ 'project.date'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-user" aria-hidden="true"></i>{{ 'project.author'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i>{{ 'project.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {%  for project in projects %}
                <tr>
                    <td>{{ project.title }}</td>
                    <td>{{ project.date|format_datetime('medium', 'short', '', 'UTC') }}</td>
                    <td>{{ project.user.username }}</td>
                    <td class="text-right">
                        <div class="item-actions">
                            <a href="{{ path('admin_view_project', {id: project.id}) }}" class="btn btn-sm btn-info">
                                <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.project_view'|trans }}
                            </a>
                            <a href="{{ path('admin_edit_project', {id: project.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.project_edit'|trans }}
                            </a>
                            <a href="{{ path('admin_delete_project', {id: project.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i> {{ 'action.project_delete'|trans }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" align="center">{{ 'project.no_projects_found'|trans }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}

    <div class="section">
        <a href="{{ path('admin_new_project')}}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.project_add'|trans }}
        </a>
    </div>

    {{ parent() }}

{% endblock %}