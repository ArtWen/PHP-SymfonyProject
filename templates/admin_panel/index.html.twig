{% extends 'base.html.twig' %}

{% block title %}Admin Panel{% endblock %}

{% block main %}
    <h1>Project list</h1>
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col" class="text-center">Title</th>
            <th scope="col" class="text-center"><i class="fa fa-calendar" aria-hidden="true"></i>Date</th>
            <th scope="col" class="text-center"><i class="fa fa-user" aria-hidden="true"></i>Author</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for project in projects %}
                <tr>
                    <td>{{ project.title }}</td>
                    <td>{{ project.date|format_datetime('medium', 'short', '', 'UTC') }}</td>
                    <td>{{ project.user.username }}</td>
                    <td class="text-right">
                        <div class="item-actions">
                            <a href="{{ path('admin_view_project', {id: project.id}) }}" class="btn btn-sm btn-info">
                                <i class="fa fa-eye" aria-hidden="true"></i> View
                            </a>
                            <a href="{{ path('admin_edit_project', {id: project.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> Edit
                            </a>
                            <a href="{{ path('admin_delete_project', {id: project.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" align="center">No project were found in the database!</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}

    <div class="section">
        <a href="{{ path('admin_new_project')}}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> New Project
        </a>
    </div>

    {{ parent() }}

{% endblock %}
