<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('index') }}">MVC Symfony Project<span class="navbar-authors"> by Artur Wenda & Maciej Moryń</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('index') }}">Home</a>
                    </li>
                    <li class="dropdown nav-item pointer">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="user">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right user" role="menu" aria-labelledby="user">
                            {% if app.user %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i> Logout
                                    </a>
                                </li>
                            {% else %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_login') }}">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i> Login
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container body-container">
            {% block body %}
                <div class="row">
                    <div class="col-sm-9">
                        {% block main %}{% endblock %}
                    </div>
                    <div class="col-sm-3">
                        <div>{% block sidebar %}{% endblock %}</div>
                    </div>
                </div>
            {% endblock %}
        </div>

        {% block footer %}
            <footer class="bg-light">
                <div class="container">
                    <div class="row center-row">
                        <div class="col-md-6 text-center">
                            <p>&copy; {{ 'now'|date('Y') }} - Artur Wenda & Maciej Moryń</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
